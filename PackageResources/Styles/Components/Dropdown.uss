/* Dropdown */
.appui-dropdown {
    
}

.appui-dropdown-item {
    flex-grow: 1;
    flex-shrink: 0;
    flex-direction: row;
    align-items: center;
    overflow: hidden;
}

.appui-dropdown-item__checkmark {
    opacity: 0;
    display: none;
    margin-right: var(--appui-alias-control-gap-md);
}

.appui-picker-item .appui-dropdown-item__checkmark {
    display: flex;
    color: var(--appui-foregrounds-200);
    --unity-image-tint-color: var(--appui-foregrounds-200);
}

.is-selected .appui-dropdown-item__checkmark {
    opacity: 1;
}

.appui-dropdown-item__icon {
    margin-right: var(--appui-alias-control-gap-md);
}